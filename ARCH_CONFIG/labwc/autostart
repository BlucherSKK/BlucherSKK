# wallpaper daemon
swww-daemon &

#monitors
wlr-randr --output HDMI-A-2 --pos 2332,0
wlr-randr --output HDMI-A-1 --scale 1.1 --pos 0,0

# select random wallpaper
$HOME/.scripts/random_wallpaper.sh sfw random &

# notifis
mako &

# panel
exec waybar &

